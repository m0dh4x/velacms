{
	"name": "withvelacms",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "bun run --filter @vela/api dev",
		"dev:api": "bun run --filter @vela/api dev",
		"dev:admin": "bun run --filter @vela/admin dev",
		"build": "bun run --filter '*' build",
		"test": "bun test",
		"typecheck": "tsc --noEmit",
		"lint": "oxlint",
		"lint:fix": "oxlint --fix",
		"format": "oxfmt .",
		"format:check": "oxfmt --check .",
		"check": "bun run typecheck && bun run lint"
	},
	"dependencies": {
		"nanoid": "^5.1.6"
	},
	"devDependencies": {
		"@types/bun": "^1.3.6",
		"oxfmt": "^0.24.0",
		"oxlint": "^1.39.0",
		"typescript": "^5"
	}
}
